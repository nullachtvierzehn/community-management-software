{
  "version": "0.2.0",
  "configurations": [
    // https://stackoverflow.com/questions/34450175/can-visual-studio-code-be-configured-to-launch-with-nodemon
    {
      "type": "node",
      "request": "launch",
      "name": "current migrations",
      "outputCapture": "std",
      "runtimeExecutable": "${workspaceFolder:Root}/node_modules/nodemon/bin/nodemon.js",
      "cwd": "${workspaceFolder:Database}",
      "restart": { "delay": 750 },
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
